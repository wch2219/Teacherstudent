<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple4">
    <android.support.v7.widget.Toolbar
        app:theme="@style/ThemeToolbar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple4"
        android:navigationIcon="@mipmap/leftbar_icon_return_white"
        android:minHeight="?attr/actionBarSize">
        <!--自定义toolbar的title 和subtitle -->
        <TextView
            android:id="@+id/back_im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/leftbar_icon_return_white"
            android:layout_marginLeft="-15dp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <TextView
                android:id="@+id/toolbar_subtitle"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:layout_margin="@dimen/margin_15"
                android:text="subtitle"
                android:textSize="@dimen/text_size14"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="4"
            android:scrollHorizontally="true"
            android:text="title"
            android:textSize="@dimen/text_size17"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/toolbar_submenu"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:maxLines="1"
            android:paddingRight="15dp"
            android:textColor="@color/text_color3" />

    </android.support.v7.widget.Toolbar>
</LinearLayout>
