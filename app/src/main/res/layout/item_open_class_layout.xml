<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_book"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/class_cover"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:background="@color/text_color6"
            android:alpha="0.7"
            android:id="@+id/class_title"
            android:text="教师资格证"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/dp_15"
            android:gravity="center_vertical"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/is_liveing"
        android:gravity="center_vertical">
        <LinearLayout
            android:id="@+id/live"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
         <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:layout_marginLeft="@dimen/dp_15"
             android:gravity="center_vertical">
             <com.jiaoshizige.teacherexam.utils.GifView
                 android:id="@+id/gif"
                 android:layout_width="18dp"
                 android:layout_height="15dp"
                 android:layout_gravity="center_horizontal"
                 android:enabled="false"/>
         </RelativeLayout>

            <TextView
                android:id="@+id/text"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:textColor="@color/purple4"
                android:textSize="@dimen/text_size14"
                android:text="直播中"/>
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_14"
                android:text="￥"
                android:visibility="gone"/>
            <TextView
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_width="82dp"
                android:layout_height="34dp"
                android:gravity="center"
                android:textColor="@color/text_color9"
                android:textSize="@dimen/sp_14"
                android:layout_marginRight="@dimen/dp_15"
                android:id="@+id/class_price"
                android:text="89.00"/>
            <TextView
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_color9"
                android:textSize="@dimen/sp_14"
                android:layout_marginRight="@dimen/dp_15"
                android:id="@+id/class_num"
                android:text="0人"/>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:id="@+id/subscribe_ly">
        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size14"
                android:textColor="@color/text_color6"
                android:text="距离开播还有"/>
            <com.jiaoshizige.teacherexam.widgets.CustomDigitalClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdsddsdsd"
                android:id="@+id/subscribe_time"
                android:textSize="@dimen/text_size16"
                android:textColor="@color/red_bg"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">
            <TextView
                android:layout_width="82dp"
                android:layout_height="34dp"
                android:text="立即预约"
                android:textColor="@color/white"
                android:id="@+id/live_subscribe"
                android:gravity="center"
                android:textSize="@dimen/text_size14"
                android:background="@drawable/yellowall"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
