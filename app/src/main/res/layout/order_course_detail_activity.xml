                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal">

                                    <ImageView
                                        android:layout_width="17dp"
                                        android:layout_height="20dp"
                                        android:src="@mipmap/common_position" />

                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
