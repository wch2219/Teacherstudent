                        android:gravity="center_vertical"
                        android:text="￥20"
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp_16" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/normal_bg" />

