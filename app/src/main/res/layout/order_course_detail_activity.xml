                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="32dp"
                                        android:text="13837518283"
                                        android:textColor="@color/text_color3"
                                        android:textSize="@dimen/text_size16" />

                                    <RelativeLayout
