<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/tab_collection_pre"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@mipmap/home_search"
            android:layout_centerVertical="true"
            android:id="@+id/search_img"
            android:visibility="visible"
            android:layout_marginRight="@dimen/margin_15"
            android:layout_alignParentRight="true"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/private_school_tab"
            android:background="@drawable/frame_shape_purple"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            >
            <RadioButton
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="@string/course"
                android:id="@+id/class_radio"
                android:button="@null"
                android:gravity="center"
                android:textSize="@dimen/text_size14"
                android:textColor="@drawable/text_color_select"
                android:background="@drawable/private_school_lefttab_select"
                />
            <RadioButton
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="@string/course"
                android:id="@+id/course_radio"
                android:textColor="@drawable/text_color_select"
                android:textSize="@dimen/text_size14"
                android:visibility="gone"
                android:gravity="center"
                android:background="@drawable/private_school_centertab_select"
                android:button="@null"/>
            <RadioButton
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="@string/book"
                android:id="@+id/book_radio"
                android:textSize="@dimen/text_size14"
                android:gravity="center"
                android:button="@null"
                android:textColor="@drawable/text_color_select"
                android:background="@drawable/private_school_righttab_select"/>
            </RadioGroup>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="23dp"
        android:id="@+id/view"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/container_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>
    </RelativeLayout>
</LinearLayout>
