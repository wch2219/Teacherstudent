<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="@color/normal2">
       <include
           layout="@layout/toolbar_layout"/>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:visibility="gone"
           android:gravity="center">
           <ImageView
               android:layout_width="120dp"
               android:layout_height="120dp"
               android:src="@mipmap/login_icon_headportraitr_default"/>

           <RelativeLayout
               android:layout_width="120dp"
               android:layout_height="120dp"
               android:gravity="bottom|right"
               >
               <ImageView
                   android:id="@+id/add"
                   android:visibility="gone"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:src="@mipmap/login_icon_addto_default"/>
           </RelativeLayout>

       </RelativeLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:background="@color/white"
          >
           <View
               android:layout_width="match_parent"
               android:layout_height="10dp"
               android:background="@color/normal2"/>
           <RelativeLayout
               android:id="@+id/updata"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_marginRight="@dimen/dp_15"
               android:layout_marginLeft="@dimen/dp_15"
               android:gravity="center_vertical">
               <TextView
                   android:text="头像"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="15sp"
                   android:textColor="@color/text_color3"/>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:orientation="horizontal">
                   <ImageView
                       android:id="@+id/avar"
                       android:layout_width="26dp"
                       android:layout_height="26dp"
                       android:layout_alignParentRight="true"
                       android:src="@mipmap/login_icon_headportraitr_default"/>
                   <TextView
                       android:layout_width="26dp"
                       android:layout_height="26dp"
                       android:layout_alignParentRight="true"
                       android:text=""
                       android:drawableRight="@mipmap/login_icon_jt"/>
               </LinearLayout>
           </RelativeLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:layout_marginRight="@dimen/dp_15"
               android:layout_marginLeft="@dimen/dp_15"
               android:background="@color/normal6"/>

           <RelativeLayout
               android:id="@+id/amend_nickname"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_marginRight="@dimen/dp_15"
               android:layout_marginLeft="@dimen/dp_15"
               android:gravity="center_vertical">
               <TextView
                   android:text="昵称"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="15sp"
                   android:textColor="@color/text_color3"/>
               <TextView
                   android:id="@+id/nickname"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:text="暂无"
                   android:textSize="13sp"
                   android:textColor="@color/text_color9"
                   android:drawablePadding="@dimen/margin_5"
                   android:drawableRight="@mipmap/login_icon_jt"/>
           </RelativeLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:layout_marginRight="@dimen/dp_15"
               android:layout_marginLeft="@dimen/dp_15"
               android:background="@color/normal6"/>
           <RelativeLayout
               android:id="@+id/login_num"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_marginRight="@dimen/dp_15"
               android:layout_marginLeft="@dimen/dp_15"
               android:gravity="center_vertical">
               <TextView
                   android:id="@+id/phone_num"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/phone_num"
                   android:textSize="15sp"
                   android:textColor="@color/text_color3"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:text=""
                   android:drawableRight="@mipmap/login_icon_jt"/>
           </RelativeLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:layout_marginRight="@dimen/dp_15"
               android:layout_marginLeft="@dimen/dp_15"
               android:background="@color/normal6"/>
           <RelativeLayout
               android:id="@+id/amend_password"
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:layout_marginRight="@dimen/dp_15"
               android:layout_marginLeft="@dimen/dp_15"
               android:gravity="center_vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/update_password"
                   android:textSize="15sp"
                   android:textColor="@color/text_color3"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:text=""
                   android:drawableRight="@mipmap/login_icon_jt"/>
           </RelativeLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:layout_marginRight="@dimen/dp_15"
               android:layout_marginLeft="@dimen/dp_15"
               android:background="@color/normal6"/>
       </LinearLayout>



       </LinearLayout>

   </LinearLayout>

