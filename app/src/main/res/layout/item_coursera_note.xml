<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
 <!--   <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/normal_bg"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15"
        android:orientation="vertical"
        android:id="@+id/item_note">

        <TextView
            android:id="@+id/note_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="【学习前准备】"
            android:textSize="@dimen/text_size14"
            android:textColor="@color/text_color3" />

        <TextView
            android:id="@+id/note_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:textSize="@dimen/text_size14"
            android:text="极乐世界电视电话都是道具上倒计时打卡了撒的接口是多久防火防盗的方法地方"
            android:textColor="@color/text_color6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/author_photo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/author_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color3"
                        android:textSize="@dimen/text_size14"
                        android:text="多少度*" />

                    <TextView
                        android:id="@+id/note_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color9"
                        android:textSize="@dimen/text_size11"
                        android:text="2017-10-12 12.36" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical">

                <ImageView
                    android:id="@+id/zan"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/common_like" />

                <TextView
                    android:id="@+id/zan_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:textColor="@color/text_color6"
                    android:textSize="@dimen/text_size12"
                    android:text="3" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_15"
        android:background="@color/normal_bg"/>
</LinearLayout>
