<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/normal_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_shap_5"
        android:paddingBottom="12dp"
        android:id="@+id/course_item"
        android:layout_marginTop="@dimen/margin_10"
        android:paddingLeft="@dimen/margin_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:paddingRight="@dimen/margin_15">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:text="冲刺直播课"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/text_size16" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp">

                <TextView
                    android:id="@+id/teacher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:background="@drawable/purple_white_shape"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_5"
                    android:paddingRight="@dimen/margin_5"
                    android:text="老师"
                    android:textColor="@color/purple4"
                    android:textSize="@dimen/text_size12" />
                <TextView
                    android:id="@+id/assistant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:background="@drawable/purple_white_shape"
                    android:gravity="center"
                    android:text="老师"
                    android:paddingLeft="@dimen/margin_5"
                    android:paddingRight="@dimen/margin_5"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="@color/purple4"
                    android:textSize="@dimen/text_size12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp">

                <TextView
                    android:id="@+id/fuhao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/orange_color"
                    android:textSize="@dimen/text_size12"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99"
                    android:id="@+id/price"
                    android:textColor="@color/orange_color"
                    android:textSize="@dimen/text_size16" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:text="￥299"
                android:id="@+id/market_price"
                android:textColor="@color/text_color9"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">



          <RelativeLayout
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
             >
              <TextView
                  android:layout_width="60dp"
                  android:layout_height="21dp"
                  android:text="今日直播"
                  android:layout_alignParentRight="true"
                  android:id="@+id/course_type"
                  android:gravity="center"
                  android:textSize="@dimen/text_size12"
                  android:textColor="@color/white"
                  android:background="@drawable/orange_bottom_shape5"/>
              <RelativeLayout
                  android:layout_below="@+id/course_type"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_above="@+id/layout"
                  android:gravity="center_vertical">
                  <ImageView
                      android:id="@+id/image"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:layout_width="60dp"
                      android:layout_height="60dp"

                      />
              </RelativeLayout>
              <LinearLayout
                  android:id="@+id/layout"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:layout_alignParentRight="true"
                  >

                  <TextView
                      android:id="@+id/learn_num"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="999"
                      android:textColor="@color/purple4"
                      android:textSize="@dimen/text_size11" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="人已学习"
                      android:textColor="@color/text_color9"
                      android:textSize="@dimen/text_size11" />
              </LinearLayout>
          </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
