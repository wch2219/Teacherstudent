<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
      <RelativeLayout
          android:layout_width="200dp"
          android:layout_height="113dp"
          android:layout_marginTop="@dimen/dp_10"
          android:layout_marginLeft="@dimen/dp_15">
          <ImageView
              android:layout_width="200dp"
              android:layout_height="113dp"
              android:src="@mipmap/pictureone"/>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">
              <LinearLayout
                  android:id="@+id/subscribe_ly"
                  android:layout_width="wrap_content"
                  android:layout_height="30dp"
                  android:background="@color/black"
                  android:alpha="0.4"
                  android:gravity="center_vertical"
                  android:visibility="gone">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/dp_15"
                      android:text="距离上课"
                      android:textColor="@color/white"
                      android:textSize="@dimen/text_size14" />

                  <com.jiaoshizige.teacherexam.widgets.CustomDigitalClock
                      android:id="@+id/subscribe_time"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="sdsddsdsd"
                      android:textColor="@color/red_bg"
                      android:textSize="@dimen/text_size16" />

              </LinearLayout>

              <LinearLayout
                  android:id="@+id/live"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/black"
                  android:alpha="0.4"
                  android:gravity="center"
                  android:orientation="horizontal">

                  <RelativeLayout
                      android:layout_width="wrap_content"
                      android:layout_height="30dp"
                      android:gravity="center_vertical">

                      <com.jiaoshizige.teacherexam.utils.GifView
                          android:id="@+id/gif"
                          android:layout_width="18dp"
                          android:layout_height="15dp"
                          android:layout_gravity="center_horizontal"
                          android:layout_marginLeft="@dimen/dp_15"
                          android:enabled="false" />
                  </RelativeLayout>

                  <TextView
                      android:id="@+id/text"
                      android:layout_width="wrap_content"
                      android:layout_height="30dp"
                      android:layout_marginLeft="@dimen/margin_5"
                      android:gravity="center_vertical"
                      android:text="直播中"
                      android:textColor="@color/white"
                      android:textSize="@dimen/sp_14" />
              </LinearLayout>
          </RelativeLayout>
      </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
