<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_15"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/mine_photo"
                android:background="@mipmap/my_png_avatar_default"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:id="@+id/mine_nickname"
                    android:textColor="@color/text_color3"
                    android:textSize="@dimen/text_size14"
                    android:text="随便A"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/answer_time"
                    android:visibility="gone"
                    android:text="2017-1.26"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mine_honework"
            android:visibility="visible"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color6"
                android:textSize="@dimen/text_size14"
                android:id="@+id/answer_content"
                android:text="我写的作业 不知道写啥内容 随便写两句啊 就低昂个意思 哦哦你们买睡睡睡"/>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/purple_shape15"
                android:gravity="center_vertical"
                android:id="@+id/vioce_rt"
                android:visibility="visible"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_below="@+id/text_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="10s"
                    android:id="@+id/vioce_length"
                    android:gravity="center"
                    android:textColor="@color/white" />
                <View
                    android:id="@+id/bo_vioce"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical|right"
                    android:background="@mipmap/home_iocn_play_default"
                    />
            </RelativeLayout>
            <!--图片-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/add_pic"
                android:orientation="vertical"></LinearLayout>
            <!--删除回复-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/del_answer"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:textSize="@dimen/text_size12"
                    android:textColor="@color/text_color6"
                    android:drawableLeft="@mipmap/icon_delete"
                    android:drawablePadding="5dp"
                    android:text="删除"/>
            </LinearLayout>
            <!--老师回复-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_15"
                android:paddingTop="@dimen/margin_10"
                android:paddingBottom="10dp"
                android:visibility="visible"
                android:id="@+id/teacher_reply_ly"
                android:layout_marginBottom="@dimen/margin_15"
                android:background="@drawable/teacher_reply_bg"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="助教"
                        android:id="@+id/reply_teacher_name"
                        android:textColor="@color/purple4"
                        android:textSize="@dimen/text_size16"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@mipmap/zhu"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/reply_teacher_type"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/teacher_reply_content"
                    android:textSize="@dimen/text_size14"
                    android:layout_marginTop="@dimen/margin_10"
                    android:textColor="@color/text_color3"
                    android:text="老是回复内容，随便回复吧 是受打击了接口是的"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size12"
                    android:textColor="@color/text_color6"
                    android:layout_marginTop="@dimen/margin_10"
                    android:id="@+id/creat_time"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
