<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <include layout="@layout/toolbar_layout"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollbars="none">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="写作业"
                    android:id="@+id/text_content"
                    android:padding="@dimen/margin_10"
                    android:textColorHint="@color/text_color9"
                    android:textSize="@dimen/text_size14" />
                <!--语音-->
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/purple_shape15"
                    android:gravity="center_vertical"
                    android:id="@+id/vioce_rt"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_below="@+id/text_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="10s"
                        android:id="@+id/vioce_length"
                        android:gravity="center"
                        android:textColor="@color/white" />
                    <View
                        android:id="@+id/bo_vioce"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical|right"
                        android:background="@mipmap/home_iocn_play_default"
                        />
                </RelativeLayout>
                <!--图片-->
                <GridView
                    android:id="@+id/add_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="15dp"
                    android:alpha="0.9"
                    android:layout_marginTop="@dimen/margin_10"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                   android:layout_below="@+id/vioce_rt"
                    android:numColumns="auto_fit"
                    android:columnWidth="60dp"
                    />
            </RelativeLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/normal_bg"/>
    </LinearLayout>
 <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
     <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="@color/purple4"/>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="@dimen/margin_15"
            android:paddingLeft="@dimen/margin_15">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">
               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:id="@+id/select_photo"
                   android:background="@mipmap/picture_default"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/select_vioce"
                    android:layout_marginLeft="@dimen/margin_15" android:background="@mipmap/voice_default"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:layout_weight="1">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CustomCheckBoxTheme"
                    android:paddingLeft="5dp"
                    android:id="@+id/limit"
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/text_color6"
                    android:text="仅楼主可见"/>
            </LinearLayout>
        </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">
         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/normal_bg"/>
         <!--拍照 图片-->
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="40dp"
             android:paddingBottom="40dp"
             android:id="@+id/select_photo_content"
             android:visibility="gone"
             android:gravity="center">
             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:layout_weight="1">
                 <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/camera"
                     android:background="@mipmap/album"/>
             </LinearLayout>
             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:layout_weight="1">
             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/album"
                 android:background="@mipmap/camera"/>
             </LinearLayout>

         </LinearLayout>
         <!--发送语音-->
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:background="@color/white"
             android:paddingTop="@dimen/margin_20"
             android:paddingBottom="@dimen/margin_30"
             android:id="@+id/select_vioce_content"
             android:visibility="gone"
             android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size14"
                    android:textColor="@color/text_color6"
                    android:text="按住说话"/>
             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/margin_20"
                 android:id="@+id/add_vioce"
                 android:background="@mipmap/home_png_voice_default"/>
         </LinearLayout>
     </LinearLayout>
     </LinearLayout>
   </RelativeLayout>

</RelativeLayout>
