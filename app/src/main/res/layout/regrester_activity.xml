<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <com.jiaoshizige.teacherexam.widgets.ClearEditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_marginTop="26dp"
        android:background="@null"
        android:inputType="phone"
        android:drawableLeft="@mipmap/login_icon_iphone"
        android:drawablePadding="@dimen/dp_16"
        android:hint="请输入手机号"
        android:singleLine="true"
        android:textColorHint="@color/text_color"
        android:textSize="@dimen/text_size14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:background="@color/normal_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:gravity="center_vertical">

        <com.jiaoshizige.teacherexam.widgets.ClearEditText
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawableLeft="@mipmap/login_icon_key"
            android:drawablePadding="@dimen/dp_16"
            android:textColorHint="@color/text_color"
            android:hint="请输入验证码"
            android:textSize="@dimen/text_size14"
            android:inputType="number"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            ></com.jiaoshizige.teacherexam.widgets.ClearEditText>

        <TextView
            android:id="@+id/identifying_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="获取验证码"
            android:textSize="@dimen/text_size14"
            android:textColor="@color/purple4" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:background="@color/normal_bg" />

    <com.jiaoshizige.teacherexam.widgets.ClearEditText
        android:id="@+id/pass_word"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="26dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:drawableLeft="@mipmap/login_icon_password"
        android:drawablePadding="@dimen/dp_16"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:hint="6-16位区分大小写"
        android:inputType="textPassword"
        android:textSize="@dimen/text_size14"
        android:singleLine="true"
        android:textColorHint="@color/text_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:background="@color/normal_bg" />


    <Button
        android:id="@+id/login_bt"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_gray"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            style="@style/LoginCheckBoxTheme"/>

        <TextView
            android:id="@+id/service_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/text_size11"
            android:textColor="@color/text_color9"
            android:text="@string/service_deal"
            android:gravity="center"
            />

    </LinearLayout>



</LinearLayout>
