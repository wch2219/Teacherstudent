<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_10"
    android:id="@+id/all_item"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_15"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@mipmap/home_icon_ask_default"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:id="@+id/question"
            android:maxLines="2"
            android:textSize="@dimen/text_size16"
            android:textColor="@color/text_color3"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@mipmap/home_icon_answer_default"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:id="@+id/sanwer"
            android:maxLines="2"
            android:textSize="@dimen/text_size16"
            android:textColor="@color/text_color3"
           />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20">

        <TextView
            android:id="@+id/sanwer_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="32dp"
            android:gravity="left"
            android:text="6人回答"
            android:textSize="@dimen/text_size12"
            android:textColor="@color/orange_color" />

        <TextView
            android:id="@+id/question_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="@dimen/text_size11"
            android:text="2017.11.16 16.52"
            android:textColor="@color/text_color9" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
