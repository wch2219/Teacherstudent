<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/normal_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_10"
        android:paddingLeft="@dimen/padding_15"
        android:paddingRight="@dimen/padding_15"
        android:paddingTop="@dimen/padding_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxEms="20"
                android:singleLine="true"
                android:text="wenzi"
                android:textColor="@color/text_color3"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/catalog_arrow"
                android:layout_width="wrap_content"
                android:layout_height="12dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/cehua_arrow_small_down"
                android:visibility="visible" />


        </RelativeLayout>

        <TextView
            android:id="@+id/course_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="20"
            android:singleLine="true"
            android:text="未完成"
            android:textColor="@color/text_color9"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_10"
        android:paddingTop="@dimen/padding_10">

        <LinearLayout
            android:id="@+id/question_prictice_result"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_prictice_result"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:src="@mipmap/home_icon_lxjg_pressed" />

            <TextView
                android:id="@+id/tv_prictice_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:text="练习结果"
                android:textColor="@color/text_color6"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_download"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_download"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:src="@mipmap/home_icon_sjxz_default" />

            <TextView
                android:id="@+id/tv_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:text="试卷下载"
                android:textColor="@color/text_color6"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_start_prictice"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:src="@mipmap/home_icon_kslx_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:text="开始练习"
                android:textColor="@color/text_color6"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/normal_bg" />

</LinearLayout>
