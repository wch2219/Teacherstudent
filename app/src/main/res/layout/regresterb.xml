<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar_layout"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/registerb_find_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置密码"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"

            android:paddingRight="10dp">


            <ImageView
                android:id="@+id/trgisterb_login_icon_eye"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:visibility="invisible"
                android:background="@mipmap/login_icon_eye" />

            <ImageView
                android:id="@+id/registerb_login_icon_del"
                android:layout_width="15dp"
                android:layout_height="50dp"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/trgisterb_login_icon_eye"
                android:visibility="invisible"
                android:src="@mipmap/login_icon_del" />

            <EditText
                android:id="@+id/registerb_user_pass"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@null"
                android:hint="请输入6-16位区分大小写"
                android:password="true"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="@color/normal_bg" />
    </LinearLayout>


    <Button
        android:id="@+id/registerb_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_slecter"
        android:text="完成"
        android:textColor="#fff"
        android:textSize="16sp" />

</LinearLayout>
