<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15"
        android:paddingTop="@dimen/margin_15">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/other_photo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/other_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="路人甲0"
                    android:textColor="@color/text_color3"
                    android:textSize="@dimen/text_size14" />

                <TextView
                    android:id="@+id/other_answer_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-10-59"
                    android:textColor="@color/text_color9"
                    android:textSize="@dimen/text_size11" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
           >
            <TextView
                android:id="@+id/replay_landlord_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回复楼主："
                android:textColor="@color/purple4"
                android:textSize="@dimen/text_size12" />

            <TextView
                android:id="@+id/other_answer_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="随便了写作业么"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/text_size12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="right|center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_30"
                    android:drawableLeft="@mipmap/zan"
                    android:drawablePadding="@dimen/margin_5"
                    android:gravity="bottom"
                    android:text="3"
                    android:textColor="@color/text_color6"
                    android:textSize="@dimen/text_size12" />

                <TextView
                    android:id="@+id/reply"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginRight="@dimen/margin_15"
                    android:drawableLeft="@mipmap/reply"
                    android:drawablePadding="@dimen/margin_5"
                    android:gravity="center"
                    android:text="回复"
                    android:textColor="@color/text_color6"
                    android:textSize="@dimen/text_size12" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/margin_15"
            android:background="@color/normal_bg" />
    </LinearLayout>
</LinearLayout>
