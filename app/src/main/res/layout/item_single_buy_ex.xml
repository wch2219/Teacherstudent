<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/normal_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/single_class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:maxEms="16"
            android:maxLines="1"
            android:text="201讲讲班"
            android:textColor="@color/text_color6" />

        <ToggleButton
            android:id="@+id/single_switch"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/activity_open_close_selected"
            android:gravity="right"
            android:text=""
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

    <com.jiaoshizige.teacherexam.widgets.CustomExpandableListView
        android:id="@+id/expandable_list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:divider="@color/line_color"
        android:drawSelectorOnTop="false"
        android:groupIndicator="@null"
        android:scrollbars="none"
        android:visibility="gone">

    </com.jiaoshizige.teacherexam.widgets.CustomExpandableListView>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/normal_bg" />

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/single_class_price"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center_vertical"
            android:text="￥55.0"
            android:textColor="@color/orange_color"
            android:textSize="@dimen/text_size14" />

        <TextView
            android:id="@+id/to_buy"
            android:layout_width="73dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/orange_shape_30"
            android:gravity="center"
            android:text="去购买"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size14" />
    </RelativeLayout>
</LinearLayout>
