<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_center_set"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.7"
    android:background="@color/top_left_layout_color_black"
    android:clickable="true"
    android:visibility="gone">

    <ImageView
        android:id="@+id/iv_close_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:padding="@dimen/margin_15"
        android:src="@mipmap/polyv_btn_close" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="9.3dp"
                android:src="@mipmap/polyv_ic_light_s" />

            <SeekBar
                android:id="@+id/sb_light"
                android:layout_width="270.6dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="9.3dp"
                android:max="100"
                android:maxHeight="2.1dp"
                android:minHeight="2.1dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:progress="0"
                android:progressDrawable="@drawable/polyv_sb_pg_drawable"
                android:thumb="@drawable/polyv_sb_thumb"
                android:thumbOffset="0dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="9.3dp"
                android:src="@mipmap/polyv_ic_light_b" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46.6dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:src="@mipmap/polyv_ic_volume_s" />

            <SeekBar
                android:id="@+id/sb_volume"
                android:layout_width="270.6dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="9.3dp"
                android:max="100"
                android:maxHeight="2.1dp"
                android:minHeight="2.1dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:progress="0"
                android:progressDrawable="@drawable/polyv_sb_pg_drawable"
                android:thumb="@drawable/polyv_sb_thumb"
                android:thumbOffset="0dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="9.3dp"
                android:src="@mipmap/polyv_ic_volume_b" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46.6dp">

            <TextView
                android:id="@+id/tv_fit"
                style="@style/tv_click_controller_land_center_s"
                android:layout_marginRight="@dimen/center_margin_right_s"
                android:padding="5dp"
                android:text="适应" />

            <TextView
                android:id="@+id/tv_full"
                style="@style/tv_click_controller_land_center_s"
                android:layout_marginRight="@dimen/center_margin_right_s"
                android:padding="5dp"
                android:text="满屏" />

            <TextView
                android:id="@+id/tv_sixteennine"
                style="@style/tv_click_controller_land_center_s"
                android:layout_marginRight="@dimen/center_margin_right_s"
                android:padding="5dp"
                android:text="16:9" />

            <TextView
                android:id="@+id/tv_fourthree"
                style="@style/tv_click_controller_land_center_s"
                android:padding="5dp"
                android:text="4:3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46.6dp"
            android:gravity="center_vertical">

            <View
                android:layout_width="133.3dp"
                android:layout_height="1.3dp"
                android:layout_marginRight="2.6dp"
                android:background="@color/white" />

            <TextView
                style="@style/tv_click_controller_land_center_not_click"
                android:layout_marginRight="12.6dp"
                android:text="字幕" />

            <View
                android:layout_width="133.3dp"
                android:layout_height="1.3dp"
                android:background="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27.3dp">

            <TextView
                android:id="@+id/tv_srt1"
                style="@style/tv_click_controller_land_center_s"
                android:layout_marginRight="@dimen/center_margin_right_s"
                android:gravity="center"
                android:padding="5dp"
                android:text="字幕1" />

            <TextView
                android:id="@+id/tv_srt2"
                style="@style/tv_click_controller_land_center_s"
                android:layout_marginRight="@dimen/center_margin_right_s"
                android:gravity="center"
                android:padding="5dp"
                android:text="字幕2" />

            <TextView
                android:id="@+id/tv_srt3"
                style="@style/tv_click_controller_land_center_s"
                android:layout_marginRight="@dimen/center_margin_right_s"
                android:gravity="center"
                android:padding="5dp"
                android:text="字幕3" />

            <TextView
                android:id="@+id/tv_srtnone"
                style="@style/tv_click_controller_land_center_s"
                android:padding="5dp"
                android:text="不显示" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>