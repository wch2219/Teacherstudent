<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/normal_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/logistics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/gray_shap_white_5"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/logistics_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单已发货"
                    android:textColor="@color/purple4"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/logistics_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2018-3-30"
                    android:textColor="@color/text_color9"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/logistic_goods"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitXY"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginRight="75dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/logistics_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/text_color3"
                        android:text="物流信息"/>
                    <TextView
                        android:id="@+id/logistic_num"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/text_color9"
                        android:text="运单编号：12345678910"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
