<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.jiaoshizige.teacherexam.widgets.ClearEditText
        android:id="@+id/phone_num"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/text_size14"
        android:maxLines="1"
        android:inputType="phone"
        android:singleLine="true"
        android:background="@null"
        android:textColor="@color/text_color3"
        android:drawableLeft="@mipmap/login_icon_iphone"
        android:drawablePadding="@dimen/dp_16"
        android:hint="请输入手机号"
        android:textColorHint="@color/text_color"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:background="@color/normal_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical">


        <com.jiaoshizige.teacherexam.widgets.ClearEditText
            android:id="@+id/pass_word"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/login_icon_password"
            android:hint="请输入密码"
            android:textSize="@dimen/text_size14"
            android:drawablePadding="@dimen/dp_16"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="@color/text_color"
            android:textColor="@color/text_color3"
            android:background="@null"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_marginRight="@dimen/margin_30"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </com.jiaoshizige.teacherexam.widgets.ClearEditText>

    </RelativeLayout>
    <View
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/normal_bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/normal_bg"
        android:visibility="gone"/>

    <Button
        android:id="@+id/login_bt"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_gray"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/forget"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="5dp"
            android:text="忘记密码"
            android:textColor="@color/text_color9"
            android:textSize="@dimen/text_size12" />

        <TextView
            android:id="@+id/register"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="5dp"
            android:text="立即注册"
            android:textColor="@color/purple1"
            android:textSize="@dimen/text_size12"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <TextView
        android:layout_marginTop="@dimen/margin_5"
        android:id="@+id/service_deal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/text_color9"
        android:text="@string/service_deal"
        android:gravity="center"
        android:visibility="gone"/>


</LinearLayout>
