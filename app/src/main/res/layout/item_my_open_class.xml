<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/normal_bg"
    android:orientation="horizontal"
   >
   <LinearLayout
       android:id="@+id/item_open_class"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:paddingTop="@dimen/dp_10"
       android:paddingBottom="@dimen/dp_10"
       android:layout_marginTop="@dimen/dp_10"
       android:background="@color/white"
       android:gravity="center_vertical">
       <RelativeLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_marginLeft="@dimen/dp_15"
           android:layout_height="match_parent"
           android:gravity="left|center_vertical">
           <ImageView
               android:id="@+id/open_class_image"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:scaleType="fitXY"
               />
       </RelativeLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_weight="2"
           android:layout_height="match_parent"
           android:layout_marginLeft="@dimen/margin_5"
           android:orientation="vertical">
           <TextView
               android:id="@+id/open_class_name"
               android:layout_marginTop="@dimen/margin_5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/sp_14"
               android:textColor="@color/text_color3"
               android:text="公开课标题公开课标题"/>
           <TextView
               android:id="@+id/open_class_content"
               android:layout_marginTop="@dimen/margin_5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:maxLines="2"
               android:maxEms="34"
               android:ellipsize="end"
               android:textColor="@color/text_color6"
               android:text="公开课标题公开课标题"/>
       </LinearLayout>
       <RelativeLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_marginLeft="@dimen/dp_15"
           android:layout_height="match_parent"
           android:layout_marginRight="@dimen/dp_15"
           android:gravity="center_vertical|right">
           <TextView
               android:id="@+id/open_class_"
               android:layout_width="80dp"
               android:layout_height="33dp"
               android:background="@drawable/yellowall"
               android:textColor="@color/white"
               android:text="已预约"
               android:gravity="center"
               android:textSize="@dimen/sp_14"/>
       </RelativeLayout>
   </LinearLayout>

</LinearLayout>
