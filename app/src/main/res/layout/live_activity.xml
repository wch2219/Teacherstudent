<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">
    <include layout="@layout/toolbar_layout"></include>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/surfaceView_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <SurfaceView
                    android:id="@+id/surfaceView"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/live_back"
                        android:background="@mipmap/live_iocn_back_nor"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/cross_live_switch"
                            android:layout_marginRight="30dp"
                            android:visibility="invisible"
                            android:background="@mipmap/live_iocn_switch_default"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="30dp"
                            android:id="@+id/live_gift_switch"
                            android:visibility="gone"
                            android:background="@mipmap/live_iocn_gift_default" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/live_share"
                            android:visibility="gone"
                            android:background="@mipmap/live_iocn_shareit_default"
                            android:layout_marginRight="15dp"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/show_chat_switch"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="-10dp"
                    android:visibility="invisible"
                    android:background="@mipmap/live_iocn_back_nor"/>
                <!--    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/live_switch"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:visibility="gone"
                        android:background="@mipmap/live_iocn_switch_default"/>-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:orientation="vertical"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    >
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingBottom="50dp"
                        android:id="@+id/live_screen"
                        android:background="@mipmap/live_iocn_variety_default"/>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
        <!--android:listSelector="@android:color/transparent"-->
        <com.jiaoshizige.teacherexam.widgets.ChatListView
            android:id="@+id/chat_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:layout_below="@+id/surfaceView_content"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none"
            android:layout_marginBottom="40dp"
            android:background="@mipmap/live_bg"
            android:transcriptMode="alwaysScroll"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/bottom_chat"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#605f58"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical">
            <LinearLayout
                android:id="@+id/input_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_15"
                android:background="@drawable/gray_shap_5">

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gray_shap_5"
                    android:id="@+id/chat_content"
                    android:hint="说点什么呢"
                    android:paddingLeft="@dimen/margin_10"
                    />

                <ImageView
                    android:id="@+id/input_emoji_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/rc_emoji_selector"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/chat_send"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="@dimen/margin_15"
                    android:background="@drawable/purple_shape"
                    android:text="发送"
                    android:paddingLeft="@dimen/margin_5"
                    android:paddingRight="@dimen/margin_5"
                    android:gravity="center"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/send_gift"
                    android:background="@mipmap/live_iocn_sendagift_default"/>
            </LinearLayout>

        </LinearLayout>
        <com.jiaoshizige.teacherexam.widgets.EmojiBoard
            android:id="@+id/input_emoji_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>
    <!--送礼物-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/gift_ly"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gift_empty"
            android:orientation="vertical"
            ></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:orientation="vertical"
            android:background="#cc000000"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="@dimen/text_size16"
                android:textColor="@color/white"
                android:text="发送礼物"/>
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center|right"
                    android:id="@+id/hide_gif_ly">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/cehua_arrow_small_down"
                    android:layout_marginRight="@dimen/dp_15"
                  />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_color6"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/gift_recycle"></android.support.v7.widget.RecyclerView>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/ly_ceng"
                    android:orientation="horizontal"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:background="#cc262623">
                <TextView
                    android:layout_width="45dp"
                    android:layout_height="23dp"
                    android:background="@drawable/orange_shape"
                    android:text="充值"
                    android:id="@+id/recharge"
                    android:gravity="center"
                    android:textSize="@dimen/text_size14"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:text="2"
                    android:textSize="@dimen/text_size14"
                    android:id="@+id/icon_num"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:textSize="@dimen/text_size14"
                    android:text="教师币"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right">
                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="33dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_15"
                        android:background="@drawable/purple_shape"
                        android:gravity="center"
                        android:id="@+id/send"
                        android:textSize="@dimen/text_size14"
                        android:text="发送"/>
                </LinearLayout>
            </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
