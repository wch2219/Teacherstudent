<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <com.jiaoshizige.teacherexam.widgets.ListenerScorllView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/single_topic_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="23dp"
                android:text="单选题(剩余29)"
                android:textColor="@color/text_color6"
                android:textSize="13sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/single_topic_recycleview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/margin_30"></android.support.v7.widget.RecyclerView>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="23dp"
                android:background="@color/normal4" />

            <TextView
                android:id="@+id/short_answer_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="23dp"
                android:text="简答题(剩余29)"
                android:textColor="@color/text_color6"
                android:textSize="13sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/short_answer_recycle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/margin_30"></android.support.v7.widget.RecyclerView>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="23dp"
                android:background="@color/normal4" />

            <TextView
                android:id="@+id/analysis_topic_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="23dp"
                android:text="辨析题(剩余29)"
                android:textColor="@color/text_color6"
                android:textSize="13sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/analysis_topic_recycle3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/margin_30"></android.support.v7.widget.RecyclerView>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="23dp"
                android:background="@color/normal4" />

            <TextView
                android:id="@+id/essay_topic_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="23dp"
                android:text="论述题(剩余29)"
                android:textColor="@color/text_color6"
                android:textSize="13sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/essay_topic_recycleview4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/margin_30"></android.support.v7.widget.RecyclerView>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="23dp"
                android:background="@color/normal4" />

            <TextView
                android:id="@+id/write_topic_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="23dp"
                android:text="写作题(剩余29)"
                android:textColor="@color/text_color6"
                android:textSize="13sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/write_topic_recycleview5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/margin_30"></android.support.v7.widget.RecyclerView>

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="23dp"
                android:background="@color/normal4" />
            <TextView
                android:id="@+id/material_topic_text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="23dp"
                android:text="材料分析题(剩余29)"
                android:textColor="@color/text_color6"
                android:textSize="13sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/material_topic_recycleview6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/margin_30"></android.support.v7.widget.RecyclerView>

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="23dp"
                android:background="@color/normal4" />

            <TextView
                android:id="@+id/teacher_topic_text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="23dp"
                android:text="教学设计题(剩余29)"
                android:textColor="@color/text_color6"
                android:textSize="13sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/teacher_topic_recycleview8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/margin_30"></android.support.v7.widget.RecyclerView>
            <View
                android:id="@+id/view8"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="23dp"
                android:background="@color/normal4" />

            <TextView
                android:id="@+id/activity_topic_text9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="23dp"
                android:text="活动设计题(剩余29)"
                android:textColor="@color/text_color6"
                android:textSize="13sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/activity_topic_recycleview9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/margin_30"></android.support.v7.widget.RecyclerView>
            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="@dimen/margin_30"
                android:background="@drawable/exam_background"
                android:gravity="center"
                android:text="交卷并查看结果"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </com.jiaoshizige.teacherexam.widgets.ListenerScorllView>


</LinearLayout>
