<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_view_shape"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_num"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/qid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/chuangguan_corner_img"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_num"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:lines="2"
            android:text="教育观"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:lines="2"
            android:text="国家实施素质教育的基本要求"
            android:textColor="@color/text_color9"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/crown1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/crown_normal" />

            <ImageView
                android:id="@+id/crown2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_17"
                android:src="@mipmap/crown_normal" />

            <ImageView
                android:id="@+id/crown3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_17"
                android:src="@mipmap/crown_normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/exam_background"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:text="再次闯关"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dip"
                android:gravity="center"
                android:text="闯过前面的关卡才能解锁哦"
                android:textColor="@color/text_color9"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
