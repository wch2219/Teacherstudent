<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/logistics_message"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dp_15"
            >

            <ImageView
                android:id="@+id/logistics_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/logistics" />

            <LinearLayout
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/logistics_dot"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/logistics_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="物流消息"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/logistics_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="点击查看物流信息"
                android:textColor="@color/text_color9"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
