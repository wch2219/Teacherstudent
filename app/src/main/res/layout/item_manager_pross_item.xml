<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:id="@+id/ll_parent"
    android:orientation="horizontal">
    <CheckBox
        android:id="@+id/cb_check"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="20dp"
        android:button="@null"
        android:background="@drawable/slete_check_type"
        android:layout_height="20dp"
        android:visibility="gone"
        android:layout_gravity="center_vertical"
        />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="22dp"
        android:src="@mipmap/video_pre" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="13dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:text="3.学前儿童动作和语言发展"
            android:textColor="#333" />
        <LinearLayout
            android:id="@+id/ll_down"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9M/S"
                android:textSize="@dimen/text_size11"
                android:id="@+id/tv_downType" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="9M/S"
                android:id="@+id/tv_totalsize"
                android:textSize="@dimen/text_size11" />



        </RelativeLayout>
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:progress="20"
            android:background="@color/grey"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_alignParentTop="true"
           android:layout_marginRight="@dimen/dp_15"
            android:layout_toEndOf="@+id/textView5" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>