<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_5"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:layout_height="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已完成"
                    android:textColor="@color/mycourse_class_detail"
                    android:textSize="@dimen/text_size12" />

                <TextView
                    android:id="@+id/completion_degree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="30"
                    android:textColor="@color/purple8"
                    android:textSize="@dimen/text_size20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:text="%"
                    android:textColor="@color/mycourse_class_detail"
                    android:textSize="@dimen/text_size12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center_vertical">

                <me.zhouzhuo.zzhorizontalprogressbar.ZzHorizontalProgressBar
                    android:id="@+id/study_prodress"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    app:zpb_bg_color="#e7dffa"
                    app:zpb_max="100"
                    app:zpb_padding="0dp"
                    app:zpb_pb_color="#b9a3f4"
                    app:zpb_progress="30" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_weight="4"
            android:gravity="right|center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/ll_download"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/margin_5"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tv_download"
                    android:layout_width="@dimen/margin_17"
                    android:layout_height="@dimen/margin_17"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/answersheet_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="下载"
                    android:textColor="@color/mycourse_class_detail"
                    android:textSize="@dimen/text_size11" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/ll_ecalendar"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/tv_ecalendar"
                    android:layout_width="@dimen/margin_17"
                    android:layout_height="@dimen/margin_17"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/answersheet_icon"  />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="学习日历"
                    android:textColor="@color/mycourse_class_detail"
                    android:textSize="@dimen/text_size11" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/ll_classgroup"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sheet"
                    android:layout_width="@dimen/margin_17"
                    android:layout_height="@dimen/margin_17"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/answersheet_icon"  />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="班级群"
                    android:textColor="@color/mycourse_class_detail"
                    android:textSize="@dimen/text_size11" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/normal_bg"/>-->
</LinearLayout>
