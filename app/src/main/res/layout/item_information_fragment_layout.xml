<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/information_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_15">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/information_product_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxEms="15"
                android:maxLines="1"
                android:text="产品名称产品名称"
                android:textColor="@color/text_color3"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/information_product_describe"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxEms="28"
                android:maxLines="2"
                android:text="dsdsdsdsd慷慨大方快递费"
                android:textColor="@color/text_color9"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|bottom">

                <TextView
                    android:id="@+id/information_product_people"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="123456人已看"
                    android:textColor="@color/text_color9"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/information_product_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="06-24"
                    android:textColor="@color/text_color9"
                    android:textSize="10sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center">

            <ImageView
                android:id="@+id/information_product_image"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
